@page "/edit-attendance"

@attribute [Authorize]

<PageTitle>Edit Attendance</PageTitle>
<RadzenRow>
    <RadzenColumn SizeMD="9">
    <RadzenLabel style="font-weight: bold" Text="Item no longer available." Visible="@(!canEdit)" />
    </RadzenColumn>
    <RadzenColumn SizeMD="3">
    <RadzenButton ButtonStyle="ButtonStyle.Secondary" style="margin-bottom: 20px" Text="Close" Visible="@(!canEdit)" Click="@CancelButtonClick" />
    </RadzenColumn>
</RadzenRow>
<RadzenRow>
    <RadzenColumn SizeMD="9">
    <RadzenLabel style="font-weight: bold" Text="Another user has made conflicting changes to one or more of the fields you have modified. Please reload." Visible="@hasChanges" />
    </RadzenColumn>
    <RadzenColumn SizeMD="3">
    <RadzenButton ButtonStyle="ButtonStyle.Secondary" Icon="autorenew" style="margin-bottom: 20px" Text="Reload" Visible="@hasChanges" Click="@ReloadButtonClick" />
    </RadzenColumn>
</RadzenRow>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Attendance</RadzenAlert>
        <RadzenTemplateForm TItem="PrimarySchoolCA.Server.Models.ConData.Attendance" Data="@attendance" Visible="@(attendance != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Attendance Date" Component="AttendanceDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@attendance.AttendanceDate" Name="AttendanceDate" />
                    <RadzenRequiredValidator Component="AttendanceDate" Text="AttendanceDate is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Present" Component="Present" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@attendance.Present" Name="Present" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Academic Session" Component="AcademicSession" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@academicSessionsForAcademicSessionID" TextProperty="AcademicSessionName" ValueProperty="AcademicSessionID" AllowClear=true
                         Placeholder="Choose AcademicSession" style="display: block; width: 100%" @bind-Value="@attendance.AcademicSessionID" Name="AcademicSessionID"
                        SelectedValue=@academicSessionsForAcademicSessionIDValue Count=@academicSessionsForAcademicSessionIDCount LoadData=@academicSessionsForAcademicSessionIDLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="School Class" Component="SchoolClass" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@schoolClassesForSchoolClassID" TextProperty="SchoolClassName" ValueProperty="SchoolClassID" AllowClear=true
                         Placeholder="Choose SchoolClass" style="display: block; width: 100%" @bind-Value="@attendance.SchoolClassID" Name="SchoolClassID"
                        SelectedValue=@schoolClassesForSchoolClassIDValue Count=@schoolClassesForSchoolClassIDCount LoadData=@schoolClassesForSchoolClassIDLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Student" Component="Student" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@studentsForStudentID" TextProperty="StudentDetails" ValueProperty="StudentID" AllowClear=true
                         Placeholder="Choose Student" style="display: block; width: 100%" @bind-Value="@attendance.StudentID" Name="StudentID"
                        SelectedValue=@studentsForStudentIDValue Count=@studentsForStudentIDCount LoadData=@studentsForStudentIDLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Term" Component="Term" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@termsForTermID" TextProperty="TermName" ValueProperty="TermID" AllowClear=true
                         Placeholder="Choose Term" style="display: block; width: 100%" @bind-Value="@attendance.TermID" Name="TermID"
                        SelectedValue=@termsForTermIDValue Count=@termsForTermIDCount LoadData=@termsForTermIDLoadData />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

