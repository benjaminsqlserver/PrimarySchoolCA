@inject Microsoft.Extensions.Localization.IStringLocalizer<AddSchool> L
@page "/add-school"

@attribute [Authorize]

<PageTitle>Add School</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save School</RadzenAlert>
        <RadzenTemplateForm TItem="PrimarySchoolCA.Server.Models.ConData.School" Data="@school" Visible="@(school != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="School Name" Component="SchoolName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@school.SchoolName" Name="SchoolName" />
                    <RadzenRequiredValidator Component="SchoolName" Text="SchoolName is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Town" Component="Town" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@school.Town" Name="Town" />
                    <RadzenRequiredValidator Component="Town" Text="Town is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="School Code No" Component="SchoolCodeNo" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@school.SchoolCodeNo" Name="SchoolCodeNo" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Main Photo" Component="MainPhoto" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    
                     <RadzenFileInput  @bind-Value="@school.MainPhoto" TValue="string" Name="MainPhoto" ChooseText="Select Main Photo" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Local Govt Area" Component="LocalGovtArea" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@localGovtAreasForLGAID" TextProperty="LgaName" ValueProperty="LgaID" AllowClear=true
                         Placeholder="Choose LocalGovtArea" style="display: block; width: 100%" @bind-Value="@school.LGAID" Name="LGAID"
                         Count=@localGovtAreasForLGAIDCount LoadData=@localGovtAreasForLGAIDLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="State" Component="State" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@statesForStateID" TextProperty="StateName" ValueProperty="StateID" AllowClear=true
                         Placeholder="Choose State" style="display: block; width: 100%" @bind-Value="@school.StateID" Name="StateID"
                         Count=@statesForStateIDCount LoadData=@statesForStateIDLoadData />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

