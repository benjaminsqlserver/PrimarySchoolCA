@page "/add-subject-school-type"

@attribute [Authorize]

<PageTitle>Add SubjectSchoolType</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save SubjectSchoolType</RadzenAlert>
        <RadzenTemplateForm TItem="PrimarySchoolCA.Server.Models.ConData.SubjectSchoolType" Data="@subjectSchoolType" Visible="@(subjectSchoolType != null)" Submit="@FormSubmit">
          <RadzenStack>
           
            <RadzenFormField Text="School Type" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@schoolTypesForSchoolTypeID" TextProperty="SchoolTypeName" ValueProperty="SchoolTypeID" AllowClear=true
                        Disabled=@(hasSchoolTypeIDValue)  style="display: block; width: 100%" @bind-Value="@subjectSchoolType.SchoolTypeID" Name="SchoolTypeID"
                        SelectedValue=@schoolTypesForSchoolTypeIDValue Count=@schoolTypesForSchoolTypeIDCount LoadData=@schoolTypesForSchoolTypeIDLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Subject" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@subjectsForSubjectID" TextProperty="SubjectName" ValueProperty="SubjectID" AllowClear=true
                        Disabled=@(hasSubjectIDValue)  style="display: block; width: 100%" @bind-Value="@subjectSchoolType.SubjectID" Name="SubjectID"
                        SelectedValue=@subjectsForSubjectIDValue Count=@subjectsForSubjectIDCount LoadData=@subjectsForSubjectIDLoadData />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

