@page "/add-parents-or-guardian"

@attribute [Authorize]
<PageTitle>Add ParentsOrGuardian</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save ParentsOrGuardian</RadzenAlert>
        <RadzenTemplateForm TItem="PrimarySchoolCA.Server.Models.ConData.ParentsOrGuardian" Data="@parentsOrGuardian" Visible="@(parentsOrGuardian != null)" Submit="@FormSubmit">
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Student" Component="Student" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown Data="@studentsForStudentID" TextProperty="AdmissionNumber" ValueProperty="StudentID" AllowClear=true
                                Disabled=@(hasStudentIDValue) Placeholder="Choose Student" style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.StudentID" Name="StudentID"
                                Count=@studentsForStudentIDCount LoadData=@studentsForStudentIDLoadData />
            </RadzenColumn>
        </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="First Name" Component="FirstName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.FirstName" Name="FirstName" />
                    <RadzenRequiredValidator Component="FirstName" Text="FirstName is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Middle Name" Component="MiddleName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.MiddleName" Name="MiddleName" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Last Name" Component="LastName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.LastName" Name="LastName" />
                    <RadzenRequiredValidator Component="LastName" Text="LastName is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Residential Address" Component="ResidentialAddress" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.ResidentialAddress" Name="ResidentialAddress" />
                    <RadzenRequiredValidator Component="ResidentialAddress" Text="ResidentialAddress is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Town" Component="Town" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.Town" Name="Town" />
                    <RadzenRequiredValidator Component="Town" Text="Town is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Phone Number1" Component="PhoneNumber1" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.PhoneNumber1" Name="PhoneNumber1" />
                    <RadzenRequiredValidator Component="PhoneNumber1" Text="PhoneNumber1 is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Phone Number2" Component="PhoneNumber2" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.PhoneNumber2" Name="PhoneNumber2" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Email Address" Component="EmailAddress" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.EmailAddress" Name="EmailAddress" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Gender" Component="Gender" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@gendersForGenderID" TextProperty="GenderName" ValueProperty="GenderID" AllowClear=true
                         Placeholder="Choose Gender" style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.GenderID" Name="GenderID"
                         Count=@gendersForGenderIDCount LoadData=@gendersForGenderIDLoadData />
                </RadzenColumn>
            </RadzenRow>
             <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="State" Component="State" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@statesForStateID" TextProperty="StateName" ValueProperty="StateID" AllowClear=true
                        Disabled=@(hasStateIDValue) Placeholder="Choose State" style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.StateID" Name="StateID"
                         Count=@statesForStateIDCount LoadData=@statesForStateIDLoadData Change="@StateIDChange" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Local Govt Area" Component="LocalGovtArea" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@localGovtAreasForLgaID" TextProperty="LgaName" ValueProperty="LgaID" AllowClear=true
                        Disabled=@(hasLgaIDValue) Placeholder="Choose LocalGovtArea" style="display: block; width: 100%" @bind-Value="@parentsOrGuardian.LgaID" Name="LgaID"
                         Count=@localGovtAreasForLgaIDCount LoadData=@localGovtAreasForLgaIDLoadData />
                </RadzenColumn>
            </RadzenRow>
           
           
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

