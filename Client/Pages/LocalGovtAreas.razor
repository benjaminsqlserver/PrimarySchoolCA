                <RadzenDataGridColumn TItem="PrimarySchoolCA.Server.Models.ConData.LocalGovtArea" Property="LgaName" Title="Lga Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PrimarySchoolCA.Server.Models.ConData.LocalGovtArea" Property="State.StateName" Title="State">
